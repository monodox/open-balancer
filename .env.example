# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Gemini API
GEMINI_API_KEY=your-actual-gemini-api-key-here

# Datadog Configuration
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com

# OpenTelemetry Configuration (Production-Grade Observability)
OTEL_SERVICE_NAME=open-balancer-backend
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.datadoghq.com
OTEL_EXPORTER_OTLP_HEADERS="dd-api-key=your-datadog-api-key"
OTEL_RESOURCE_ATTRIBUTES="service.name=open-balancer,service.version=1.0.0,deployment.environment=development"

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secure-nextauth-secret-key

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/openbalancer

# Environment
NODE_ENV=development
ENVIRONMENT=development
VERSION=1.0.0
HOSTNAME=open-balancer-local

# OpenTelemetry Collector Configuration
OTEL_COLLECTOR_ENDPOINT=http://localhost:4318
OTEL_COLLECTOR_GRPC_ENDPOINT=http://localhost:4317

# Brownout Configuration (Thresholds in milliseconds and percentages)
BROWNOUT_SOFT_LATENCY_THRESHOLD=2000
BROWNOUT_HARD_LATENCY_THRESHOLD=5000
BROWNOUT_EMERGENCY_LATENCY_THRESHOLD=10000
BROWNOUT_SOFT_ERROR_THRESHOLD=0.05
BROWNOUT_HARD_ERROR_THRESHOLD=0.10
BROWNOUT_EMERGENCY_ERROR_THRESHOLD=0.20
BROWNOUT_SOFT_COST_THRESHOLD=50
BROWNOUT_HARD_COST_THRESHOLD=100
BROWNOUT_EMERGENCY_COST_THRESHOLD=200